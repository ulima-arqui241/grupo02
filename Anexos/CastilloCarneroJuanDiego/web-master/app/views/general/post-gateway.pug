	.content.content-alt
		.container
			.row
				.col-md-6.col-md-offset-3
					.card
						p.text-center #{translate('processing_your_request')}

	form(
		ng-controller="PostGatewayController",
		ng-init="handleGateway();"
		id='gateway' method='POST')
